<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.acceptable.AcceptableFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/any"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_region"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="지역 조건"
                android:textStyle="bold"
                android:textColor="#5F8A54"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="150dp"
                android:layout_height="46dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="150dp"
                android:layout_height="46dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/bed_inq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5F8A54"
            android:textStyle="bold"
            android:text="실시간 병상 조회" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/er"
                android:layout_width="154dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="응급실" />

            <CheckBox
                android:id="@+id/ward"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="입원실" />

        </LinearLayout>


    <Button
        android:id="@+id/room_button"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="조회" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_er"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_ward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>


        <TextView
            android:textColor="#5F8A54"
            android:textStyle="bold"
            android:id="@+id/em_dis_inf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중증 응급 질환 정보" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ce_he"
                android:text="뇌출혈 수술"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/ce_in"
                android:text="뇌경색"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/mi"
                android:text="심근경색"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/ab_in"
                android:text="복부손상"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/massive_bu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중증화상" />

            <CheckBox
                android:id="@+id/connect_li"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사지접합" />

            <CheckBox
                android:id="@+id/em_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="응급내시경" />

            <CheckBox
                android:id="@+id/em_di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="응급투석" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/pre_mom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조산 산모" />

            <CheckBox
                android:id="@+id/mental_pat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정신질환자" />

            <CheckBox
                android:id="@+id/baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신생아" />
        </LinearLayout>

    <Button
        android:id="@+id/dis_button"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="중증 질환 수용 가능 여부" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#474646">

            <TextView
                android:id="@+id/hop_name"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#474646">
                <TextView
                    android:id="@+id/txt_ce_he"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_ce_in"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/txt_mi"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/txt_ab_in"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#474646">
                <TextView
                    android:id="@+id/txt_massive_bu"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_connect_li"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/txt_em_en"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/txt_em_di"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#474646">
                <TextView
                    android:id="@+id/txt_pre_mom"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_mental_pat"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/txt_baby"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/text_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/any2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"/>
   </LinearLayout>
</ScrollView>