<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ambulance.AmbulanceFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_region"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="지역 조건"
                android:textStyle="bold"
                android:textColor="#5F8A54" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="140dp"
                android:layout_height="46dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="140dp"
                android:layout_height="46dp" />
            <Button
                android:id="@+id/ambulance_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="검색"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ambulance_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="구급차 유형"
                android:textStyle="bold"
                android:textColor="#5F8A54" />

            <TextView
                android:id="@+id/ambulance_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="차량 번호"
                android:textStyle="bold"
                android:textColor="#5F8A54" />

            <TextView
                android:id="@+id/ambulance_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="전화번호"
                android:textStyle="bold"
                android:textColor="#5F8A54"/>

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/ambulance_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
